@using WebApplication9.Models
@model List<ShoeProperties>

@{
    ViewBag.Title = "Shoes";
}
<style>

    table, th, tr, td {
        border: 2px solid black;
    }
</style>
<hr>
@using (Html.BeginForm("Shoes", "Shoe", FormMethod.Get))
{
    <h5>
        Seach For Type : @Html.TextBox("p")
        <input type="submit" value="search" />
    </h5>
}
<hr>

<table class="table table-bordered">
    <tr>
        <th>ShoeID</th>
        <th>Type</th>
        <th>Size</th>
        <th>Color</th>
        <th>Sex</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
            <tr>
                <th>@urn.ShoeID</th>
                <td>@urn.Type</td>
                <td>@urn.Size</td>
                <td>@urn.Color</td>
                <td>@urn.Sex</td>
                <td>
                    <a href="/Shoe/DeleteShoeProduct/@urn.ShoeID" class="btn btn-danger">Delete</a>
                    <a href="/Shoe/UpdateShoeProduct/@urn.ShoeID" class="btn btn-success">Update</a>
                </td>
            </tr>
        }
    </tbody>


</table>
<a href="/Shoe/NewShoeProduct/" class="btn btn-primary">Add New Accessory</a>